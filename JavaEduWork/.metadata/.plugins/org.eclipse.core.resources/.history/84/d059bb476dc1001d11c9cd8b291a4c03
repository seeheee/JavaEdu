package com.edu.oop2;
/*
 * 기본 생성자는 개발자가 생성 안해도 컴파일러가 알아서 생성해줌
 * 
 * 
 * */



public class Shirt {
	public String brand;
	public boolean longSleeved;
	public char size;
	
	public String getDetails() {
		return brand +"," +longSleeved + "," + size;
	}
	//기본 생성자
	public Shirt() {}
	
	// 명시적 생성자(필드 초기화)
	public Shirt(String brand, boolean longSleeved, String string) {
		this.brand = brand;
		this.longSleeved = longSleeved;
		this.size = string;
	}
	
	
}
